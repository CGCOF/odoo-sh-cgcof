<?xml version="1.0"?>
<odoo>

    <!--reps history-->
    <record model="ir.ui.view" id="reps_azure_file_tree">
        <field name="name">reps.azure.file.tree</field>
        <field name="model">reps.azure.file</field>
        <field name="arch" type="xml">
            <tree string="Reps">
                <field name="name"/>
                <field name="container_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="reps_azure_file_form">
        <field name="name">reps.azure.file.form</field>
        <field name="model">reps.azure.file</field>
        <field name="arch" type="xml">
            <form string="Reps">
                <header>
                    <button name="send_files" string="Send Files" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="container_id"/>
                        <field name="_active"/>
                        <field name="container_path_ids" nolabel="1" colspan="2">
                            <tree editable="bottom">
                                <field name="generator_id"/>
                                <field name="path"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Actions-->
    <record id="action_reps_azure_file" model="ir.actions.act_window">
        <field name="name">Reps</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reps.azure.file</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="reps_azure_file_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Reps
            </p>
        </field>
    </record>

    <!--Menus-->
    <menuitem id="menu_reps_azure_file" name="Reps" action="action_reps_azure_file" parent="menu_reps" sequence="2"/>

</odoo>