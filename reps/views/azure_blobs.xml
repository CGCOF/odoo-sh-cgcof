<?xml version="1.0"?>
<odoo>

    <!--azure blobs-->
    <record model="ir.ui.view" id="azure_blobs_tree">
        <field name="name">azure.blobs.tree</field>
        <field name="model">azure.blobs</field>
        <field name="arch" type="xml">
            <tree string="Azure Blobs">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="azure_blobs_form">
        <field name="name">azure.blobs.form</field>
        <field name="model">azure.blobs</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="list_containers" string="List containers" type="object" class="btn btn-primary" icon="fa-cogs"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="account_name"/>
                        <field name="account_key"/>
                    </group>
                    <notebook>
                        <page string="Containers">
                            <field name="container_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--Actions-->
    <record id="action_azure_blobs" model="ir.actions.act_window">
        <field name="name">Azure Blobs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">azure.blobs</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="azure_blobs_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new instances of Azure Blobs
            </p>
        </field>
    </record>

    <!--Menus-->
    <menuitem id="menu_azure" name="Azure" parent="menu_reps_root" sequence="1"/>
    <menuitem id="menu_azure_blobs" action="action_azure_blobs" parent="menu_azure" sequence="1"/>

</odoo>