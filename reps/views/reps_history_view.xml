<?xml version="1.0"?>
<odoo>

    <!--reps history-->
    <record model="ir.ui.view" id="reps_history_search">
        <field name="name">reps.history.search</field>
        <field name="model">reps.history</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <search string="Reps history">
                <field name="college_id"/>
                <field name="shipping_type"/>
                <field name="shipping_date"/>
                <field name="file"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="reps_history_tree">
        <field name="name">reps_history.tree</field>
        <field name="model">reps.history</field>
        <field name="arch" type="xml">
            <tree string="Reps history">
                <field name="college_id"/>
                <field name="shipping_type"/>
                <field name="shipping_date"/>
                <field name="file"/>
            </tree>
        </field>
    </record>

    <!--Actions-->
    <record id="action_reps_history" model="ir.actions.act_window">
        <field name="name">Reps History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reps.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="reps_history_tree"/>
        <field name="search_view_id" ref="reps_history_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Reps history
            </p>
        </field>
    </record>

    <!--Menus-->
    <menuitem id="menu_reps" name="Reps" parent="menu_reps_root" sequence="1"/>
    <menuitem id="menu_reps_history" action="action_reps_history" parent="menu_reps" sequence="2"/>

</odoo>